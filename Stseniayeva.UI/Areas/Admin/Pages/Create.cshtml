@page
@model Stseniayeva.UI.Areas.Admin.Pages.CreateModel

@{
ViewData["Title"] = "Create";
}
<h1>Create</h1>
<h4>Moto</h4>
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Moto.MotoName" class="control-label"></label>
                <input asp-for="Moto.MotoName" class="form-control" />
                <span asp-validation-for="Moto.MotoName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Moto.Description" class="control-label"></label>
                <input asp-for="Moto.Description" class="form-control" />
                <span asp-validation-for="Moto.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Moto.SpeedMax" class="control-label"></label>
                <input asp-for="Moto.SpeedMax" class="form-control" />
                <span asp-validation-for="Moto.SpeedMax" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Moto.Images" class="control-label"></label>
                <div class="custom-file mt-3">
                    <input type="file" asp-for="Moto.Images"
                           class="custom-file-input" id="customFile">
                    <label class="custom-file-label"
                           for="customFile">Выберите файл</label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Moto.CategoryId" class="control-label"></label>
                <select asp-for="Moto.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>
@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
